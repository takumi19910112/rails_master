<%= form_with model: @question, local: true do |f|%>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="field">
    <%= f.text_field :title, id:"content_title", placeholder:"タイトル" %>
  </div>
  <div class="field">
    <%= f.collection_select(:tag_id,Tag.all,:id, :name, {},)  %><br />
  </div>

  <div class="field">
    <%= f.text_area :content, id:"content", placeholder:"本文" %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>

<!-- リアルタイムプレビュー -->
<script type="text/javascript">
window.onload = function() {
new Vue({
el: '#editor',
data: {
input: '<%== j @question.content %>',
},
filters: {
marked: marked,
},
});
};
</script>
</div>