<%= form_with model: @question, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"content_title" %>
  </div>

  <div class="field">
    <%= f.collection_select(:tag_id,Tag.all,:id, :name, {},)  %><br />
  </div>

  <div class="field">
    <%= f.label :content, "本文" %><br />
    <%= f.markdown :content, id:"content" %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>