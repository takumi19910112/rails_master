<%= form_with model: @question, local: true do |f|%>
  <%= render 'shared/error_messages', model: f.object %>
    <div class="form__wrappe">
    <div class="contents__field">
      <div class="field">
        <%= f.text_field :title, id:"content_title", placeholder:"タイトル" ,class: :form__title%>
      </div>
      <div class="field">
        <%= f.collection_select(:tag_id,Tag.all,:id, :name, {},class: :form__tag)  %><br />
      </div>

      <div class="field">
        <%= f.text_area :content, id: 'article_markdown_content',class: :form__content, placeholder:"マークダウンが使えます。コードブロックを使用する際は１行あけてください。" %>
      </div>

      <div class="action">
        <%= f.submit "投稿する", class: :form__btn  %>
      </div>
    </div>

      <div class="code__block">
        <div class="preview__nav">プレビュー</div>
      <div class="markdown__space markdown" id="preview" ></div>   <%# ここにMarkdownに変換された入力内容が入る %>
    </div>
<% end %>

