<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      
       <%if @sns_id.present? %>
        <%= hidden_field_tag :sns_auth, true %>
       <% else %>
        <%= form_with model: @user, url: user_registration_path, method: :post, local: true do |f| %>

        <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, id:"user_nickname" %>
        </div>

        <div class="field">
          <%= f.label :first_name, "姓" %><br />
          <%= f.text_field :first_name, id:"user_first_name" %>
        </div>

        <div class="field">
          <%= f.label :last_name, "名" %><br />
          <%= f.text_field :last_name, id:"user_last_name" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" ,minimum_password_length: "6" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="sin_up">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
      <div class="google">
      <%= link_to  user_google_oauth2_omniauth_authorize_path, method: :post  do %>
       <%= image_tag "google.png",class:"sized" %><%= "Googleで登録" %>
       <% end %>
      </div>
      </div>
      <% end%>
    </div>
  </div>
</div>